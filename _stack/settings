#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/registry"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_registry"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_registry"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_STACKPREFIX}_registry_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
# TRY MULTILINE FOR CLARITY !!!!!!!!!!!!!!!!!!
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_REGISTRY_ENVIRONMENT,\
$VCW_STACK_REGISTRY_COMMAND,\
$VCW_STACK_REGISTRY_VOLUMES,\
$VCW_STACK_REGISTRY_NETWORKS,\
$VCW_STACK_REGISTRY_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="registry"
export VCW_STACK_GLOBAL_IMAGE_NAME="registry"
export VCW_STACK_REGISTRY_ENVIRONMENT=
export VCW_STACK_REGISTRY_COMMAND=
export VCW_STACK_REGISTRY_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_registry_volume:/var/lib/registry"
export VCW_STACK_REGISTRY_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay"
export VCW_STACK_REGISTRY_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_registry_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS registry.base
export VCW_STACK_REGISTRY_PORTS="5000:5000"
export VCW_STACK_REGISTRY_DEPLOY_RESOURCES_LIMITS_MEMORY="384m"
export VCW_STACK_REGISTRY_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS registry.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
